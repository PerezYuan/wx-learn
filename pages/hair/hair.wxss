.tab-title {
  position: fixed;
  width: 100%;
  left: 0;
  top: 0;
  overflow: hidden;
  background-color: #fff;
  border-bottom: 1px solid #eee;
  height: 60rpx;
  line-height: 60rpx;
  padding: 20rpx 0;
}

.flex {
  float: left;
  width: 25%;
  text-align: center;
  font-size: 14px;
  overflow: hidden;
}

.flex span {
  display: block;
  width: 70%;
  text-align: center;
  color: #666;
  border-radius: 10rpx;
  margin: 0 auto;
}

.flex.active span {
  background-color: #1296db;
  color: #fff;
}

.tab-content {
  overflow: hidden;
  margin-top: 100rpx;
}

.tab-content .content {
  overflow: hidden;
  display: none;
}

.tab-content .content.active {
  display: block;
}

.tab-content .content-item {
  float: left;
  width: 50%;
  padding: 10rpx;
  box-sizing: border-box;
}

.tab-content .content-item image {
  width: 100%;
  height: 500rpx;
}

.tab-content .content-item p{
  display: block;
  font-size: 16px;
  font-weight: bold;
}

.tab-content .content-item text{
  font-size: 12px;
  color: #aaa;
}