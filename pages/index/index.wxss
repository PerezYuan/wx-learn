/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.lifa-wrap {
  height: auto;
  padding: 20rpx;
}

.lifa-wrap swiper {
  margin-top: 20rpx;
}

.slide-image {
  width: 100%;
  height: 100%;
}

.picker {
  text-align: center;
  margin-top: 10rpx;
}

.picker image {
  width: 35rpx;
  height: 35rpx;
  vertical-align: middle;
}

.picker text {
  font-size: 14px;
  margin-left: 10rpx;
  vertical-align: middle;
}

.shops_title {
  margin-top: 10rpx;
}

.shops_title p{
  display: block;
  font-size: 16px;
  font-weight: bold;
}

.shops_title text{
  font-size: 12px;
  color: #aaa;
}


.section__ctn {
  margin-top: 20rpx;
  border-radius: 3px;
  overflow: hidden;
}

.section__title {
  font-size: 14px;
  font-weight: bold;
}

.section__location {
  font-size: 12px;
  color: #aaa;
}

.section__location image{
  vertical-align: middle;
  width: 12px;
  height: 12px;
  margin-right: 5px;
}