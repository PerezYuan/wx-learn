/**index.wxss**/
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
  vertical-align: middle;
}

.userinfo-nickname {
  color: #666;
}

.user-info {
  text-align: center;
  padding: 30rpx 0;
  background-color: #fff;
}

.hair-style {
  text-align: center;
  padding: 30rpx 0;
  background-color: #fff;
}

.no-user {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

.nav-item {
  display: block;
  position: relative;
  background-color: #fff;
  padding: 40rpx 30rpx;
  margin-top: 15rpx;
  font-size: 12px;
}

.nav-item image {
  position: absolute;
  width: 16px;
  height: 16px;
  top: 50%;
  transform: translateY(-50%);
  right: 30rpx;
}

.no-user-info {
  width: 200rpx;
  height: 200rpx;
  line-height: 200rpx;
  border-radius: 100rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}